<UserControl x:Class="blockoptimiser.Views.ZoneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:blockoptimiser.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="220,174,0,0" TextWrapping="Wrap" Text="{Binding ScreenDescription}" VerticalAlignment="Top" Height="88" Width="392"/>
    </Grid>
</UserControl>
